<Page x:Class="PoeApp3.AddRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoeApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Display">

    <Grid Background="White">

        <StackPanel Margin="0,0,0,-123">
            <Menu >
                <MenuItem x:Name="Recipe1" Header="Add" Click="RecipeButton_Click" ></MenuItem>
                <MenuItem Header="View">
                    <MenuItem x:Name="display" Header="Display"/>
                    <Separator/>
                    <MenuItem Header=" Clear"/>
                </MenuItem>
                <MenuItem x:Name="adjust" Header=" Adjust"></MenuItem>
            </Menu>

            <TextBlock Text="Display" FontSize="30" FontWeight="Bold" Width="184" Height="53" TextAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock Text="Please select from list below the Recipe you want to display:" FontWeight="Bold" Width="804" Height="53" TextAlignment="Left" />
            <TextBox x:Name="RecipeText" Width=" 100" Height="30" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
